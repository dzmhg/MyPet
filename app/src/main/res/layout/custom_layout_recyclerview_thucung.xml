<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imKhuyenMaiThuCung"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bia02" />

    <TextView
        android:id="@+id/txtTenSanPhamNoiBat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top các thương hiệu lớn"
        android:layout_margin="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerThuongHieuLon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtTenTopSanPhamNoiBat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tóp thú cưng tìm nhiều nhất"
        android:layout_margin="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTopChovaMeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>